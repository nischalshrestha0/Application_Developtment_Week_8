@page "/calculator"

<h3 class="mb-3">Calculator</h3>

<div class="row g-2 mb-3" style="max-width: 420px;">
    <div class="col-6">
        <label class="form-label">Number 1</label>
        <input type="number" class="form-control" @bind="Num1" />
    </div>

    <div class="col-6">
        <label class="form-label">Number 2</label>
        <input type="number" class="form-control" @bind="Num2" />
    </div>
</div>

<div class="d-flex flex-wrap gap-2 mb-3">
    <button class="btn btn-primary" @onclick="Add">Add (+)</button>
    <button class="btn btn-secondary" @onclick="Subtract">Subtract (-)</button>
    <button class="btn btn-success" @onclick="Multiply">Multiply (×)</button>
    <button class="btn btn-danger" @onclick="Divide">Divide (÷)</button>
</div>

<div class="alert alert-info" style="max-width: 420px;">
    <b>Result:</b> @Result
</div>
