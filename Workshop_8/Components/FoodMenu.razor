@page "/foodmenu"

<h3 class="mb-3">Food Menu</h3>

<div class="d-flex gap-2 mb-3">
    <button class="btn btn-outline-primary" @onclick="SortByName">Sort by Name</button>
    <button class="btn btn-outline-secondary" @onclick="SortByPrice">Sort by Price</button>
</div>

<div class="row g-2">
    @foreach (var item in Items)
    {
        <div class="col-12 col-md-6 col-lg-4">
            <ItemCard
                Name="@item.Name"
                Ingredients="@item.Ingredients"
                Price="@item.Price" />
        </div>
    }
</div>

@code {
    private List<FoodItem> Items = new()
    {
        new FoodItem { Name="Pizza",  Ingredients="Cheese, Tomato, Dough", Price=10 },
        new FoodItem { Name="Burger", Ingredients="Bun, Patty, Lettuce",   Price= 8 },
        new FoodItem { Name="Pasta",  Ingredients="Sauce, Cheese",         Price= 9 },
        new FoodItem { Name="Momo",   Ingredients="Flour, Chicken, Spices",Price= 7 },
        new FoodItem { Name="Fried Rice", Ingredients="Rice, Veg, Egg",    Price= 6 }
    };

    private void SortByName()  => Items = Items.OrderBy(i => i.Name).ToList();
    private void SortByPrice() => Items = Items.OrderBy(i => i.Price).ToList();

    private class FoodItem
    {
        public string Name { get; set; } = "";
        public string Ingredients { get; set; } = "";
        public decimal Price { get; set; }
    }
}
